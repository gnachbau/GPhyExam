<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgDetails"
    tools:context=".DetailActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_detailPanel"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_detailPanel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/medicament2" />

        <TextView
            android:id="@+id/tv_medicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/iv_detailPanel"
            app:layout_constraintBottom_toBottomOf="@id/iv_detailPanel"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textColor="@color/redFont"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/tv_posology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tv_medicName"
            app:layout_constraintTop_toBottomOf="@id/tv_medicName"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="18sp" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>